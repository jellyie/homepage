{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "baseUrl": ".",
    "paths": {
      "@/lib/*": ["lib/*"],
      "@/pages/*": ["pages/*"],
      "@/styles/*": ["styles/*"],
      "@/components/*": ["components/*"],
      "@/layouts/*": ["components/layouts/*"],
      "@/images/*": ["public/*", "public/images/*"],
      "@/images/accessguide/*": ["public/images/accessguide/*"],
      "@/images/drawablenotes/*": ["public/images/drawablenotes/*"],
      "@/images/ecopacking/*": ["public/images/ecopacking/*"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx"],
  "exclude": ["node_modules"]
}
